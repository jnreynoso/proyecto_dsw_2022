@model IEnumerable<SistemaCursosOnline.Models.Course>

@{
    ViewData["Title"] = "Cursos";
}

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="information">
                <div class="course-img center">
                    <img src="@item.photo_url" class="img"></img>
                </div>
                <div class="description">
                    <div><b>@item.name</b></div>
                    <div><i>@item.Schedule.turn</i></div>
                    <div>@item.Schedule.beginning_hour - @item.Schedule.finish_hour</div>
                    <div>@item.Schedule.duration</div>
                    @Html.ActionLink("Seleccionar", "Index", "ScheduleAvailable", new { courseId = item.id }, null)
                </div>
            </div>
        </div>
    }
</div>
