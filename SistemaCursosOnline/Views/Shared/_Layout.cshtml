<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaCursosOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaCursosOnline.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="background">

        </div>
        <nav class="menu">
            <div class="navbar-container">
                <div class="navbar-menu">
                    <span id="home" class="navbar-link border-radius-left" asp-area="" asp-controller="Home" asp-action="Index">Cursos</span>
                    <span id="teachers" class="navbar-link" asp-area="" asp-controller="Teachers" asp-action="Index">Profesores</span>
                    <span class="navbar-link" asp-area="" asp-controller="Home" asp-action="Privacy">Nosotros</span>
                    <span class="navbar-link" border-radius-right" asp-area="" asp-controller="Home" asp-action="">Cuenta</span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $('#home').click(function() {
            document.location = '@Url.Action("Index","Home")';
        });

        $('#teachers').click(function() {
            document.location = '@Url.Action("Index","Teachers")';
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
